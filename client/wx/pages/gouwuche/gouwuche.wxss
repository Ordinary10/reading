/* pages/gouwuche/gouwuche.wxss */

.img {
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  margin: 80rpx auto;
  display: block;
}

.text {
  font-size: 30rpx;
  color: #a9a9a9;
  margin: 20rpx 0rpx 20rpx 100rpx;
}

.btn {
  display: block;
  width: 250rpx;
  height: 100rpx;
  color: red;
  border: 2rpx solid red;
  background-color: white;
  margin: 40rpx auto;
  /* text-align: center;
  line-height: 100rpx;
  border-radius: 50rpx; */
}

.more {
  color: red;
  font-size: 48rpx;
  width:100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  letter-spacing: 4rpx;
  font-style: oblique;
  margin: 20rpx 0;
}

.back {
   background-color: #dcdcdc;
   display: flex;
   justify-content: space-between;
   flex-wrap: wrap;
}

.book {
  width: 370rpx;
  height: 580rpx;
  vertical-align: middle;
  background-color: white;
  margin: 20rpx 0 0 0;
}

.book image {
  width: 350rpx;
  height: 350rpx;
  display: block;
  margin: auto;
}

.tit {
  font-size: 36rpx; /*自适应字体 */
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /*设置 需要显示的行数*/
  margin-top: 10rpx;
}

.price {
  color: red;
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0;
}

.pinglun {
  font-size: 30rpx;
  color: #228b22;
  margin-top: 10rpx;
}
